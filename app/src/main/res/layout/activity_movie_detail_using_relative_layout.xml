<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainscreen.MovieDetailActivity">
    <ImageView
        android:id="@+id/movie_detail_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/thegodfather"
        android:scaleType="centerCrop"/>
    <View
        android:background="@drawable/image_gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="280dp"/>
            <RelativeLayout
                android:id="@+id/movie_detail_information_container"
                android:layout_width="match_parent"
                android:layout_height="220sp"
                android:padding="15sp">
                <ImageView
                    android:id="@+id/movie_detail_mini_pic"
                    android:layout_width="120sp"
                    android:scaleType="centerCrop"
                    android:layout_height="220sp"
                    android:src="@drawable/thegodfather"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/movie_detail_mini_pic"
                    android:orientation="vertical"
                    android:padding="5sp"
                    android:layout_marginStart="10sp">
                    <TextView
                        android:id="@+id/movie_detail_name"
                        style="@style/big_label_style"
                        android:text="@string/sample_movie_name"
                        android:maxLines="3"/>
                    <TextView
                        android:id="@+id/movie_detail_year"
                        style="@style/big_label_style"
                        android:text="@string/sample_year_label"
                        android:layout_marginStart="5sp"
                        android:layout_below="@id/movie_detail_name"/>
                    <TextView
                        android:id="@+id/movie_detail_categories"
                        style="@style/thin_small_label_style"
                        android:text="@string/sample_movie_name"
                        android:layout_below="@id/movie_detail_year"/>

                    <RatingBar
                        android:id="@+id/movie_detail_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:numStars="5"
                        android:progressTint="@color/yellow"
                        android:rating="5"
                        android:stepSize="0.1"/>
                    <TextView
                        android:id="@+id/movie_detail_rating_score"
                        style="@style/thin_small_label_style"
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:textColor="@color/yellow"
                        android:text="@string/sample_rating_score"
                        android:layout_toEndOf="@id/movie_detail_rating"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/movie_detail_trailer_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    style="@style/medium_label_style"
                    android:text="@string/trailer_label"/>
                <WebView
                    android:id="@+id/movie_detail_trailer_web_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/black"
                    android:layout_gravity="center"
                    android:padding="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/movie_detail_overview_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/overview_label"
                    style="@style/medium_label_style"
                    android:text="@string/overview_label"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12sp">
                    <TextView
                        android:id="@+id/movie_detail_context"
                        style="@style/thin_small_label_style"
                        android:text="@string/sample_text"/>
                </ScrollView>
                <Button
                    android:id="@+id/movie_detail_add_wish_list_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_to_wish_list_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:backgroundTint="@color/mauvelous"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>